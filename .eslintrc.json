{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "plugins": ["import", "react"],
  "root": true,
  "extends": [
    "bloq",
    "plugin:import/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.4.1"
    }
  },
  "rules": {
    "no-console": "warn",
    "arrow-body-style": ["error", "as-needed"],
    "complexity": ["error", { "max": 10 }]
  }
}
